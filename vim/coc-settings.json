{
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "javascriptreact",
        "css",
        "scala",
        "json",
        "rust",
        "go"
    ],
    "yaml.schemas": {
        "http://publicstatic.cnworkshop.xyz/compose-spec.json": [
            "*/docker-compose.yml",
            "*/docker-compose.yaml"
        ],
        "https://json.schemastore.org/ansible-role-2.9.json": [
            "**/tasks/*.yaml"
        ]
    },
    "yaml.schemaStore.enable": true,
    "yaml.trace.server": "verbose",
    "languageserver": {
        "svls": {
            "command": "svls",
            "args": [
                "-d"
            ],
            "rootPatterns": [
                ".svls.toml"
            ],
            "filetypes": [
                "verilog",
                "systemverilog"
            ]
        },
        "ccls": {
            "command": "ccls",
            "args": [
                "-v=2"
            ],
            "filetypes": [
                "cpp",
                "c",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                }
            }
        }
    }
}
